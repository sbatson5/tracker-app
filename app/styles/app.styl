.search-area {
  .search-options {
    list-style: none;
    display: inline-block;
    width: 75%;
    margin: 0 auto;

    .search-toggle {
      display: inline-block;
      font-size: 2rem;
      padding: 1rem;
      cursor: pointer;
      border-right: 1px dotted $blue;
    }
    .search-toggle:hover {
      color: $light-blue;
    }
  }
  .active {
    color: $blue;
  }
}

.search-box {
  width: 100%;
  margin: 0;
  padding: 0;

  .search-header {
    text-align: center;
  }

  .search-field {
    width: 50%;
    margin: 0 auto;

    label[for=search] {
      input {
        height: 2rem;
        width: 70%;
        font-size: 1.4rem;
      }
      button {
        width: 10%;
        height: 2rem;
        border: 1px solid $blue;
        font-size: 1.25rem;
        color: $blue;
        background-color: white;
      }
    }
  }
}

.clearfix {
  margin: 0;
  padding: 0;
}

#game-holder {
  display: inline-block;
  width: 100%;
  margin: 0 2rem;
}

.ember-application {
  padding: 0;
  margin: 0;
}

#banner-image {
  width: 100%;
  height: 25rem;
  background: url('/images/kart.jpg') no-repeat;
  margin-top: -3rem;

  .image-container {
    background-color: rgba(0, 0, 0, 0.7);
    height: 25rem;
    width: 100%;
  }

  .vertical-centered {
    width: 100%;
    text-align: center;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
  }
  .banner-header {
    padding-top: 3rem;
    font-size: 4rem;
    color: white;
    font-weight: 400;
    margin-bottom: 0
  }
  .banner-sub-header {
    color: $blue;
    font-weight: 600;
    padding-top: 0;
  }
}

